# HIS Backend Environment Configuration
# Copy this file to .env and update values accordingly

# =============================================================================
# Application
# =============================================================================
PROJECT_NAME=HIS Backend
API_V1_STR=/api
SECRET_KEY=your_super_secret_key_change_in_production_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=his_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# =============================================================================
# Celery
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# MinIO (S3-compatible storage)
# =============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=his-uploads
MINIO_SECURE=false

# =============================================================================
# Elasticsearch
# =============================================================================
ELASTICSEARCH_URL=http://elasticsearch:9200

# =============================================================================
# Flower (Celery monitoring)
# =============================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# =============================================================================
# External Ports (adjust if conflicts with other services)
# =============================================================================
APP_PORT=8000
POSTGRES_PORT=5432
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
ELASTICSEARCH_PORT=9200
FLOWER_PORT=5555
DOZZLE_PORT=8080
